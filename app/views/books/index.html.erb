<header>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<tbody>
			<% @books.each do |book| %>
			<tr>
			　<td><%= book.title %></td>
			　<td><%= book.body %></td>
			<td class="book-content-function"><%= link_to "Show" ,book_path(book.id)%></td>
			<td class="book-content-function"><%= link_to "Edit" ,edit_book_path(book.id) %></td>
			<td class="book-content-function"><%= link_to "Delete" ,book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</header>


<h4>New book</h4>
<%= form_for(@book) do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>